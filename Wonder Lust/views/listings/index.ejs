<% layout("/layouts/boilerplate") %>

<div class="listings-wrapper">

  <div id="filters">

    <a href="/listings?category=trending" class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>

    <a href="/listings?category=rooms" class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=iconic" class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic city</p>
    </a>

    <a href="/listings?category=mountains" class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Moutains</p>
    </a>

    <a href="/listings?category=castles" class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>

    <a href="/listings?category=pools" class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>

    <a href="/listings?category=flats" class="filter">
      <div><i class="fa-solid fa-house-chimney-user"></i></div>
      <p>flats</p>
    </a>

    <a href="/listings?category=homes" class="filter">
      <div><i class="fa-solid fa-house-chimney-user"></i></div>
      <p>homes</p>
    </a>

    <a href="/listings?category=villa" class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>Villa</p>
    </a>

    <a href="/listings?category=camps" class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camps</p>
    </a>

    <a href="/listings?category=farms" class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </a>

    <a href="/listings?category=igloo" class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Igloo</p>
    </a>

    <a href="/listings?category=beach" class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </a>

    <a href="/listings?category=apartment" class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>Apartment</p>
    </a>

    <a href="/listings?category=arctic" class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Artic</p>
    </a>

    <div class="tax-toggle">
      <div class="form-check-revers form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label tax-label" for="flexSwitchCheckDefault">
          Display total
        </label>
      </div>
    </div>

  </div>

  <div class="row g-4 mt-1">
    <% if (!allListings || allListings.length === 0) { %>
      <div class="col-12">
        <p>No listings found.</p>
      </div>
    <% } else { %>
      <% for (let listing of allListings) { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card listing-card">
              <img
                src="<%= listing.image?.url || '/images/placeholder.jpg' %>"
                class="card-img-top"
                alt="<%= listing.title %>"
              />
              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text">
                  <%= new Intl.NumberFormat('en-IN').format(listing.price) %> / night
                  <span class="tax-info"> +18% GST</span>
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    <% } %>
  </div>

</div>

<script>
  const taxSwitch = document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName('tax-info');
    for (let info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>
